html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
  body(class="container" style="background-color: #101010")
    canvas#myChart(width="600" height="400")
    input.form-control(type="text" placeholder="Learning Rate" id="rate" value=0.05 style="width: 200px")
    p(style='color: white') Points: <span id="points">0</span>
    input.form-range(type="range" id="slider" min=0 max=5000 value=100 style="width: 200px")
    br
    button.btn.btn-primary#train
      | Train

    table.table(style="color: white")
      thead
        tr
          td Epoch
          td Accuracy
          td X weight 
          td Y weight
      tbody
        tr
          td.epoch 0
          td.accuracy 0
          td.xWeight 0
          td.yWeight 0
    
    footer.footer
      h3.text-center Made by <a href='https://github.com/enzogehlen/perceptron' >Enzo Gehlen</a>

  script
    include ../node_modules/chart.js/dist/chart.min.js
    include ../scripts/dataHandler.js
    include ../scripts/perceptron.js
    include ../scripts/script.js